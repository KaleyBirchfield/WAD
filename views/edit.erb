<html>
<head>
<style type="text/css">
	div.topbar {
		height: 30px;
		background-color: ;
		position: absolute;
		left: 50px;
	}
	div.navigation{
		height: 30px;
		width: 600px;
		background-color: ;
		position: absolute;
		left: 50px;
		top: 50px;
	}
	
	div.content {
		position: absolute;
		top: 80px;
		left: 50px;
	}
	
	.menuitem {
		width: 100px;
		height: 30px;
		float: left;
		margin-left: 10px;
		font-size: 110%
	}
	
	div.article {
		background-color: #EEEEEE;
		padding: 10px 10px 40px 10px;
		width: 600px;
		float: left;
	}
</style>
</head>
<body>

<div class="topbar"></div>

<div class="navigation">
	<div class="menuitem"><a href="/"><b>Home</b></a></div>
	<div class="menuitem"><a href="/about">About</a></div>
	<div class="menuitem"><a href="/edit">Edit</a></div>
	<% if $credentials %>
	  <% if $credentials[0] != '' %>
		<div class="menuitem"><a href="/logout">Logout</a></div>
		<% if $credentials[0] == "Admin" %>
		  <div class="menuitem"><a href="/admincontrols">Admin Controls</a></div>
		<% end %>
	  <% else %>
		<div class="menuitem"><a href="/login">Login</a></div>
	  <% end %>
	<% else %>
	   <div class="menuitem"><a href="/login">Login</a></div>
	<% end %>
	<br><br>
</div>
<div class="content">

<h1>Edit article</h1>

<br>

<form action="/edit" method="post" id="edit">
  <input type="hidden" name="_method" value="put">
  <textarea rows="20" cols="100" name="message"><%= @info %></textarea>
  <input type="submit" value="Update">
</form>
<p><a href="../reset">Reset</a></p>

<% if $credentials[0] == "Admin" %>
	<form action="/archive" method="post">
		<input type="submit" value="Archive the article">
	</form>
<% end %>
</div>
</body>
</html>